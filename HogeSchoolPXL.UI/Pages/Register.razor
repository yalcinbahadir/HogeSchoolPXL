@page "/register"
@using Microsoft.AspNetCore.Components.Forms
<h3>Register</h3>
@if (ShowMessage)
{
    <div class="bg-danger text-white p-2">
        @Message
    </div>
}

<EditForm Model="@Model" OnValidSubmit="HandelValidSubmit">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>
    <div class="form-group">
        <label>Email</label>
        <InputText @bind-Value="Model.Email" class="form-control" name="email" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <InputText @bind-Value="Model.Password" class="form-control" name="password" />
    </div>
    <div class="form-group">
        <label>ConfirmPassword</label>
        <InputText @bind-Value="Model.ConfirmPassword" class="form-control" name="confirmpassword" />
    </div>
    <input type="submit" value="Register" class="btn btn-primary" />
</EditForm>